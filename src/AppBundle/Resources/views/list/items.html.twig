{#require: items, type, language, nofollow#}

{% for item in items %}
    {% if type == "author" %}
        {% include "@App/list/author.html.twig" with {
            author: item,
            language: language,
            nofollow: nofollow
        } %}
    {% elseif type == "parallango" %}
        {% include "@App/list/parallango.html.twig" with {
            parallango: item,
            language: language,
            nofollow: nofollow
        } %}
    {% elseif type == "section" %}
        {% include "@App/list/section.html.twig" with {
            section: item,
            language: language,
            nofollow: nofollow
        } %}
    {% else %}
        {# TODO: throw exception #}
    {% endif %}
{% endfor %}
